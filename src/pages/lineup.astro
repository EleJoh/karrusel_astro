<style>
  .hero {
    background-image: url("/hero_images/lineup.webp");
    background-size: cover;
    height: 300px;
    background-position: center;
    justify-content: center;
  }

  .gradient h1 {
    padding-top: 17rem;
  }

  .gradient {
    text-align: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 55%;
    background: linear-gradient(to bottom: ;, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  }

  .thur,
  .fri,
  .sat {
    display: inline-block;
  }

  .thur:hover,
  .fri:hover,
  .sat :hover {
    text-decoration: underline;
    color: var(--light_grey);
  }

  h3 {
    font-weight: 200;
  }
  .days {
    display: flex;
    justify-content: space-between;
    padding-top: 3rem;
    padding-bottom: 4rem;
    padding-left: 4rem;
    padding-right: 4rem;
  }

  #day,
  #day2,
  #day3 {
    padding-bottom: 1rem;
    padding-top: 0rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  h4 {
    padding-left: 2rem;
    padding-right: 2rem;
    padding-bottom: 2rem;
    font-weight: 200;
    line-height: 2.5;
  }

  .artist_list {
    text-align: center;
  }
  .dot {
    padding: 1rem;
  }

  .dot::after {
    content: " ·";
  }

  .buttons {
    display: flex;
    justify-content: space-between;
    padding-left: 2rem;
    padding-right: 2rem;
    padding-top: 0.5rem;
    padding-bottom: 5rem;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Function to scroll to the specified target element
    function scrollToElement(targetId) {
      var targetElement = document.getElementById(targetId);
      if (targetElement) {
        targetElement.scrollIntoView({ behavior: "smooth", block: "start" });
      }
    }

    // Get the elements that trigger the scroll
    var thurTriggerElement = document.querySelector(".thur");
    var friTriggerElement = document.querySelector(".fri");
    var satTriggerElement = document.querySelector(".sat");

    // Add click event listeners to each trigger element
    if (thurTriggerElement) {
      thurTriggerElement.addEventListener("click", function () {
        scrollToElement("day");
      });
    }

    if (friTriggerElement) {
      friTriggerElement.addEventListener("click", function () {
        scrollToElement("day2");
      });
    }

    if (satTriggerElement) {
      satTriggerElement.addEventListener("click", function () {
        scrollToElement("day3");
      });
    }
  });
</script>
