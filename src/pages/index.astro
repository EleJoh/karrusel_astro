---
import "../styles/style.css";
// import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
import Component from "../components/Component.astro";
import Navigation from "../components/Navigation.astro";
import Newsletter from "../components/Newsletter.astro";
import Hero from "../components/Hero.astro";
---

<html lang="en">
  <body>
    <Navigation />
    <main>
      <Hero picPath="../index_pics/hero_forside.webp" heroText="3 days of house, disco and techno in the woods." />
      <p class="p_hero">Experience 3 days of house, disco, and techno nestled in a magical forest at KARRUSEL festival! Join us at Refshaleoen, Copenhagen, from August 29 - 31, 2024!</p>
      <Card class="hero_index_pic" name="LINEUP 2024" imgPath="../index_pics/lineup_forside.webp" />
      <Card name="TICKETS" imgPath="../index_pics/tickets_forside.webp" />
      <Component h3="RELEVANT" />
      <Card name="INFO OG MAP" imgPath="../index_pics/map_forside.webp" />
      <Card name="VOLUNTEERING" imgPath="../index_pics/volunteering_forside.webp" />
      <Card name="COMMUNITY" imgPath="../index_pics/community_forside.webp" />
      <Component h3="THROWBACK" />
      <Card id="karousel" name="LINEUP 23" imgPath="../index_pics/lineup23_forside.webp" />
      <Newsletter />
    </main>
  </body>
  <Footer />
</html>

<style>
  .p_hero {
    margin: 5% 15%;
    text-align: center;
  }

  @media screen and (min-width: 800px) {
    .p_hero {
      margin: 5% 15%;
      text-align: center;
      font-size: var();
    }
  }
</style>
